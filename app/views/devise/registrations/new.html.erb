  <div class="container">
    <div class="d-sm-flex justify-content-center h-100">
      <div class="col-lg-4 card-body text-center">
        <h5><%= I18n.t('pages.employee.signup') %></h5>

        <p class="text-muted">
          <i class="material-icons icon-150pt">access_time</i>
        </p>
        <p>
          <strong class="headings-color">
            <%= I18n.t('auth.messages.wellcome_message') %>
          </strong>
        </p>
        <p class="text-muted">
          <%= I18n.t('auth.messages.without_sign_up') %>
        </p>
      </div>

      <div class="col-lg-8 card-form__body card-body">
        <%= simple_form_for(resource, method: :post, url: registration_path(resource_name)) do |f| %>
          <%= f.input :name %><br />
          <%= f.input :email %><br />
          <%= f.input :cpf %><br />
          <%= f.input :born_day, start_year: Date.today.year - 100 %><br />
          <%= f.input :address %><br />
          <%= f.input :phone %><br />
          <%= f.input :password, autocomplete: "new-password" %>
          <%= f.input :password_confirmation %><br />

          <%= f.submit I18n.t('buttons.login'), class: "btn btn-primary" %>
          <%= back_button %>
        <% end %>
      </div>
    </div>
  </div>
